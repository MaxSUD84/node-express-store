<h1>Корзина</h1>

<div id="card">
    {{#if works.length}}
        <table>
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Количество</th>
                    <th>Действие</th>
                </tr>
            </thead>
            <tbody>
                {{#each works as |work|}}
                    {{#> childEntry}}
                        <tr>
                            <td>{{work.title}}</td>
                            <td>{{count}}</td>
                            <td>
                                <button class="btn btn-small js-remove" data-id="{{work.id}}">Удалить</button>
                            </td>
                        </tr>
                    {{/childEntry}}
                {{/each}}
            </tbody>
        </table>
        <p><strong>Цена:  </strong><span class="price">{{price}}</span></p>

        <form action="/orders" method="post">
            <button type="submit" class="btn">Сделать заказ</button>
        </form>
    {{else}}
        <p>Корзина пуста</p>
    {{/if}}
</div>