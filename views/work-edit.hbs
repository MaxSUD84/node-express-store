<h1>Редатирование работы: {{work.title}}</h1>

{{!-- <form action="/works/edit" method="post"> --}}
<form action="/catalog/edit" method="post" class="work-form">
    <div class="input-field col s6">
          <input placeholder="Работа у заказчика" name="title" id="title" type="text" class="validate" required value="{{work.title}}">
          <label for="title">Название объекта</label>
           <span class="helper-text" data-error="Поле не может быть пустым"></span>
    </div>

    <div class="input-field col s6">
          <input placeholder="1000" name="price" id="price" type="text" class="validate" required min="0.0"  value="{{work.price}}">
          <label for="price">Цена</label>
          <span class="helper-text" data-error="Введите цену"></span>
    </div>

    <div class="input-field col s6">
          <input placeholder="img.png" name="img" id="img" type="text" class="validate" required value="{{work.img}}">
          <label for="img">URL картинки</label>
          <span class="helper-text" data-error="Введите URL картинки"></span>
    </div>

    <input type="hidden" name="id" value="{{work.id}}">

    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button type="submit" class="btn btn-primary">Редактировать работу</button>
</form>

<form action="/catalog/remove" method="post">
      <input type="hidden" name="id" value="{{work.id}}">
       <input type="hidden" name="_csrf" value="{{csrf}}">
      <button class="btn red">Удалить работу</button>
</form>